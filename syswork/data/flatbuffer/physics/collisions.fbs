namespace Physics;

enum ResponseType : byte
{
	Ignore = 0,
	Block = 1
}

table Response
{
	name : string;
	collision : ResponseType;
	query : ResponseType;
}

table FiltersResponses
{
	name : string;
	comment : string;
	default_collision : ResponseType;
	default_query : ResponseType;
	custom_responses : [Response];
}

table FilterBehaviours
{
	names : [string];
	responses : [FiltersResponses];
}

root_type FilterBehaviours;
file_identifier "FILT";
file_extension "filter";